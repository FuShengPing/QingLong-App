<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="auto.qinglong">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.main">
        <activity
            android:name=".activity.app.CodeEditorActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.app.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.white">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.plugin.web.PluginWebRuleActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.plugin.web.PluginWebActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ql.log.LogDetailActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ql.script.ScriptDetailActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.app.HomeActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.app.LoginActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Theme.gray" />
    </application>

</manifest>