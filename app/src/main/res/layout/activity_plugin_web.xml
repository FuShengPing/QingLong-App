<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.plugin.web.PluginWebActivity">

    <RelativeLayout
        android:id="@+id/common_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_color"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/common_bar_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/style_press_gray"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/common_bar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp">

        <EditText
            android:id="@+id/et_url"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="Url"
            android:background="@drawable/style_input"
            android:hint="请输入网址"
            android:lines="1"
            android:paddingHorizontal="5dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/style_cursor_blue"
            android:textIsSelectable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_load"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/style_button_blue"
                android:text="@string/str_load"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_read"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/style_button_blue"
                android:text="@string/str_read"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_import"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/style_button_blue"
                android:text="@string/str_import"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/web_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/bg_gray" />
</LinearLayout>