<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.plugin.web.PluginWebActivity">

    <RelativeLayout
        android:id="@+id/common_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_color"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/common_bar_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/style_press_gray"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/common_bar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:text="规则列表"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/bar_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/style_press_gray"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_white" />
        </LinearLayout>
    </RelativeLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        app:srlAccentColor="@color/text_color_80"
        app:srlEnableLoadMore="false"
        app:srlEnableOverScrollDrag="true"
        app:srlEnableRefresh="false"
        app:srlPrimaryColor="@color/white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/plugin_web_rule_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</LinearLayout>