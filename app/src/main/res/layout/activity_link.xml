<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.plugin.link.PluginLinkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/common_bar_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/style_press_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/common_bar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="精选导航"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bar_contribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_press_gray"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:src="@drawable/ic_view_list_white"
            android:text="投稿"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>